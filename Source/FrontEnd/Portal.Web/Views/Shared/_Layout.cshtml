@using Asp.Infrastructure.Extensions
@using Portal.Resources.Web
<!DOCTYPE html>
<html>
    <head @RenderSection("Namespaces", false)>
        <title>@ViewBag.Title</title>
        <link rel="shortcut icon" href="/favicon.png" type="image/x-icon" />
        <link rel="icon" href="/favicon.png" type="image/x-icon" />
        <meta http-equiv="content-type" content="text/html; charset=utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1">
        @RenderSection("Metadata", false)
        @CdnResources.RenderStyles("~/cdn/styles/css.css")
        @RenderSection("Styles", false)
        @RenderSection("Scripts", false)
    </head>
    <body ng-app="ngClickberry" ng-controller="AppCtrl">
        <script>
            (function(i, s, o, g, r, a, m) {
                i['GoogleAnalyticsObject'] = r;
                i[r] = i[r] || function() {
                    (i[r].q = i[r].q || []).push(arguments);
                }, i[r].l = 1 * new Date();
                a = s.createElement(o), m = s.getElementsByTagName(o)[0];
                a.async = 1;
                a.src = g;
                m.parentNode.insertBefore(a, m);
            })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');
            ga('create', '@ViewBag.GoogleAnalyticsId', 'auto');
            ga('send', 'pageview');
        </script>
        <div id="wrapper">
            <div id="header">
                <div class="bl_980 ov_h">
                    <a href="/" class="logo" target="_self"><span></span></a>
                    @Html.Partial("_MenuPartial")
                    @Html.Partial("_LogOnPartial")
                </div>
            </div>
            <table class="tableLayout @RenderSection("Layout", false)">
                <tr>
                    <td>
                        <div id="main">
                            <div id="content">
                                <div class="bl_980">
                                    @RenderBody()
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            </table>
            <div id="footer">
                <div class="b_footer bl_980">
                    <a href="http://clickberry.com" class="logo"></a>
                    <p>
                        @Html.Raw(InterfaceMessages.LayoutCopyright)
                        <a href="@Url.Action("terms", "home")">@InterfaceMessages.LayoutLicenseAgreement</a> |
                        <a href="javascript:void()" id="feedback">@InterfaceMessages.LayoutSupport</a>
                    </p>
                </div>
            </div>
        </div>
        @CdnResources.RenderScripts("~/cdn/scripts/jquery.js", "~/cdn/scripts/external.js")
        @RenderSection("ScriptsBottom", false)
    </body>

</html>