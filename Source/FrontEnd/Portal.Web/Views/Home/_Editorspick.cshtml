<script type="text/ng-template" id="editorspick.html">
    
@{
    var leftBanner = ViewBag.ContentBannerLeft;
    var rightBanner = ViewBag.ContentBannerRight;
}    

    <!-- fix-content -->
    <div class="fix-content">

        <h1>Editor's pick</h1>

        <div class="list-tags-holder" infinite-scroll="nextPage()">
            <div class="list-tags" cb-masonry masonry-item-selector="tags-item" masonry-gutter="10" masonry-items="examples">
                <div class="tags-item" ng-repeat="example in examples" cb-example-card ng-model="example">
                </div>
            </div>
            <p ng-if="examples.length == 0 && !isLoading">There are no videos.</p>
            @if (!string.IsNullOrEmpty(leftBanner))
            {
                <div class="content-banner-left banner">
                    @Html.Raw(leftBanner)
                </div>
            }
            @if (!string.IsNullOrEmpty(rightBanner))
            {
                <div class="content-banner-right banner">
                    @Html.Raw(rightBanner)
                </div>
            }
        </div>

        <!-- list end -->
        <cb-loader loader-if="isLoading"></cb-loader>
    </div>
    <!-- fix-content end -->

    <div ui-view="video"></div>

</script>
