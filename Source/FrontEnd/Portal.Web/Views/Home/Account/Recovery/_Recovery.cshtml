<script type="text/ng-template" id="account.recovery.html">
    
    <!-- fix-content -->
    <div class="fix-content slide-left" ui-view>
        <!-- registration-field -->
        <div class="registration-field count-wrap">
            <h1>Forgot your password?</h1>
            <div class="edit-profile">
                <form action="" ng-submit="submitEmail(email)" name="recoverPasswordForm">
                    <div class="holder-input"><input type="email" placeholder="Enter your e-mail" ng-model="email" ng-minlength="4" cb-model-email required></div>
                    <div ng-class="{'disabled': recoverPasswordForm.$invalid}">
                        <div class="btn btn-submit edit-profile-submit">
                            <input type="submit" value="" ng-disabled="recoverPasswordForm.$invalid" />Submit
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!-- registration-field end -->
        <cb-loader loader-if="isLoading"></cb-loader>
    </div>
    <!-- fix-content end -->

</script>

<script type="text/ng-template" id="account.recovery.email-sent.html">

    <div>
        <!-- registration-field -->
        <div class="registration-field count-wrap">
            <h1>We've sent password reset instructions to your email</h1>
            <div class="edit-profile">
                <p>If you don't receive instructions within a minute or two, check your email spam and junk filters, or try resending your request.</p>
                <form action="" ng-submit="resend()" name="recoverPasswordForm">
                    <div ng-class="{'disabled': !resendActive}">
                        <div class="btn btn-submit edit-profile-submit">
                            <input type="submit" value="" ng-disabled="!resendActive" />Resend
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!-- registration-field end -->
    </div>

</script>

<script type="text/ng-template" id="account.recovery.link-expired.html">

    <div>
        <!-- registration-field -->
        <div class="registration-field count-wrap">
            <h1>Password recovery link expired</h1>
            <div class="edit-profile">
                <p>Password recovery link has been expired or does not exist, try resending your request within a minute or two.</p>
                <form action="" ng-submit="resend()" name="linkExpiredForm">
                    <div ng-class="{'disabled': !resendActive}">
                        <div class="btn btn-submit edit-profile-submit">
                            <input type="submit" value="" ng-disabled="!resendActive" />Resend
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!-- registration-field end -->
    </div>

</script>

<script type="text/ng-template" id="account.recovery.set-password.html">

    <div>

        <div class="registration-field count-wrap" ng-if="!linkValidated">
            <h1>Validating link</h1>
        </div>

        <div class="registration-field count-wrap" ng-if="linkValidated">
            <h1>Choose your new password</h1>
            <div class="edit-profile">
                <form action="" ng-submit="submitPassword(newPassword, newPasswordConfirm)" name="setPasswordForm">
                    <div class="holder-input"><input type="password" placeholder="New password" ng-model="newPassword" ng-minlength="6" ng-maxlength="100" required></div>
                    <div class="holder-input"><input type="password" placeholder="Verify password" ng-model="newPasswordConfirm" cb-model-confirm="newPassword" ng-minlength="6" ng-maxlength="100" required></div>
                    <div ng-class="{'disabled': setPasswordForm.$invalid}">
                        <div class="btn btn-submit edit-profile-submit">
                            <input type="submit" value="" ng-disabled="setPasswordForm.$invalid" />Submit
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <cb-loader loader-if="isLoading"></cb-loader>
    </div>

</script>